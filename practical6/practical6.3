#include <stdio.h>
int main() {
    int pin = 1234, enteredPin, attempts = 3;

    while(attempts > 0) {
        printf("Enter PIN: ");
        scanf("%d", &enteredPin);

        if(enteredPin == pin) {
            printf("Access Granted");
            break;
        } else {
            attempts--;
            printf("Wrong PIN. Attempts left: %d\n", attempts);
        }
    }
    if(attempts == 0)
        printf("Card Blocked");
    return 0;
}